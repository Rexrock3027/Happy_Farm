<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/h1301_bac"
    android:orientation="vertical"
    tools:context=".H0601">

    <TextView
        android:id="@+id/h0601_t002"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/dp10"
        android:layout_marginTop="@dimen/dp10"
        android:background="@drawable/h0601_bg_rectangle_with_arc"
        android:backgroundTint="@color/purple_200"
        android:text="@string/h0601_t002"
        android:textColor="@color/Navy"
        android:textSize="@dimen/font14"
        app:autoSizeTextType="uniform" />

    <TableRow
        android:id="@+id/h0601_choose"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/dp10"
        android:layout_marginEnd="@dimen/dp10">

        <Spinner
            android:id="@+id/h0601_sp01"
            android:layout_width="120dp"
            android:layout_height="match_parent"
            android:layout_marginTop="@dimen/dp10"
            android:background="@drawable/h0601_bg_edt_selector"
            android:backgroundTint="@color/teal_200"
            android:entries="@array/h0601_season"
            android:gravity="center"
            android:prompt="@string/h0601_t002"
            android:spinnerMode="dropdown" />

        <Spinner
            android:id="@+id/h0601_sp02"
            android:layout_width="120dp"
            android:layout_height="match_parent"
            android:layout_marginStart="@dimen/dp10"
            android:layout_marginTop="@dimen/dp10"
            android:background="@drawable/h0601_bg_edt_selector"
            android:backgroundTint="@color/teal_200"
            android:entries="@array/h0601_spring"
            android:gravity="center"
            android:prompt="@string/h0601_t002"
            android:spinnerMode="dialog" />

    </TableRow>

    <TextView
        android:id="@+id/h0601_t004"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/dp10"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="@dimen/dp10"
        android:layout_marginBottom="@dimen/dp10"
        android:background="@drawable/h0601_bg_rectangle_with_arc"
        android:backgroundTint="@color/purple_200"
        android:gravity="center"
        android:text="@string/h0601_t004"
        android:textColor="@color/Navy"
        android:textSize="14sp"
        app:autoSizeTextType="uniform" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/dp10"
        android:layout_marginEnd="@dimen/dp10">

        <LinearLayout
            android:id="@+id/pestshow"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TableRow
                android:id="@+id/h0601_pest01"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <com.city2farmer.CircleImgView
                    android:id="@+id/h0601_img01"
                    android:layout_width="70dp"
                    android:layout_height="70dp"
                    android:contentDescription="@string/h0601_img01"
                    app:srcCompat="@drawable/h0601_b01moth" />

                <TextView
                    android:id="@+id/h0601_f001"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="10dp"
                    android:layout_marginTop="@dimen/dp10"
                    android:background="@drawable/h0601_bg_rectangle_with_corners"
                    android:backgroundTint="@color/white"
                    android:text="@string/h0601_f001"
                    android:textColor="@color/Navy"
                    android:textSize="@dimen/font18"
                    app:autoSizeTextType="uniform" />

            </TableRow>

            <TableRow
                android:id="@+id/h0601_pest02"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <com.city2farmer.CircleImgView
                    android:id="@+id/h0601_img02"
                    android:layout_width="70dp"
                    android:layout_height="70dp"
                    android:layout_marginTop="@dimen/dp10"
                    android:contentDescription="@string/h0601_img02"
                    app:srcCompat="@drawable/h0601_v01bact" />

                <TextView
                    android:id="@+id/h0601_f001a"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="10dp"
                    android:layout_marginTop="20dp"
                    android:background="@drawable/h0601_bg_rectangle_with_corners"
                    android:backgroundTint="@color/white"
                    android:text="@string/h0601_f001a"
                    android:textColor="@color/Navy"
                    android:textSize="@dimen/font18"
                    app:autoSizeTextType="uniform" />
            </TableRow>

        </LinearLayout>
    </ScrollView>

    <TextView
        android:id="@+id/h0601_t005"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/dp10"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="@dimen/dp10"
        android:layout_marginBottom="@dimen/dp10"
        android:background="@drawable/h0601_bg_rectangle_with_arc"
        android:backgroundTint="@color/purple_200"
        android:gravity="center"
        android:text="@string/h0601_t005"
        android:textColor="@color/Navy"
        android:textSize="@dimen/font14"
        app:autoSizeTextType="uniform" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/dp10"
        android:layout_marginEnd="@dimen/dp10">

        <LinearLayout
            android:id="@+id/solshow"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <EditText
                android:id="@+id/h0601_f002"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:autofillHints=""
                android:background="@drawable/h0601_bg_rectangle_with_corners"
                android:backgroundTint="@color/white"
                android:inputType="none"
                android:text="@string/h0601_f002"
                android:textColor="@color/Navy"
                android:textSize="@dimen/font14" />
        </LinearLayout>
    </ScrollView>

    <TableRow
        android:id="@+id/h0601_tablema"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="bottom"
        android:layout_marginTop="@dimen/dp10"
        android:gravity="center">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:layout_gravity="bottom"
            android:layout_marginStart="-10dp"
            android:layout_marginEnd="-15dp"
            android:layout_weight="1"
            android:background="@color/Brown"
            android:duplicateParentState="true"
            android:gravity="bottom"
            android:orientation="horizontal">

            <com.city2farmer.CircleImgView
                android:id="@+id/h0601_icon"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_gravity="center"
                android:layout_marginStart="30dp"
                android:layout_marginEnd="20dp"
                android:scaleType="fitCenter"
                android:scaleX="0.9"
                android:scaleY="0.9"
                android:scrollIndicators="none"
                android:scrollbarDefaultDelayBeforeFade="400"
                android:scrollbarFadeDuration="250"
                app:srcCompat="@drawable/googleg_color" />

            <ImageView
                android:id="@+id/h0601_home"
                android:layout_width="0dp"
                android:layout_height="50dp"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:contentDescription="@string/h0601_b001"
                android:scaleX="1.05"
                app:srcCompat="@drawable/h1301_btn007" />

            <ImageView
                android:id="@+id/h0601_fans"
                android:layout_width="0dp"
                android:layout_height="50dp"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:contentDescription="@string/h0601_b001"
                app:srcCompat="@drawable/h1301_btn008" />

            <ImageView
                android:id="@+id/myname06"
                android:layout_width="0dp"
                android:layout_height="50dp"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:contentDescription="@string/h0601_b001"
                app:srcCompat="@drawable/about_us" />

            <TextView
                android:id="@+id/h0601_store"
                android:layout_width="0dp"
                android:layout_height="50dp"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:background="@drawable/googleg_color"
                android:gravity="center"
                android:scaleX="0.4"
                android:scaleY="1"
                android:textColor="@color/black"
                android:textSize="@dimen/font20"
                android:visibility="gone" />
        </LinearLayout>

    </TableRow>

</LinearLayout>