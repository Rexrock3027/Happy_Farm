<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/h1301_bac">

    <LinearLayout
        android:id="@+id/rl01"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"
        android:orientation="vertical">

        <Button
            android:id="@+id/lmb001"
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:layout_gravity="end"
            android:layout_weight="1"
            android:backgroundTint="@color/teal_200"
            android:scaleX="1"
            android:text="@string/action_settings"
            android:textColor="@color/Navy"
            android:textSize="18sp"
            android:visibility="gone" />

        <TextView
            android:id="@+id/lt000"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center|start"
            android:paddingBottom="@dimen/dp15"
            android:text="@string/lt000"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:textColor="@color/black"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/lt001"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center|start"
            android:layout_marginBottom="@dimen/dp15"
            android:background="@drawable/h1501_bg_btn_lost_window_focused"
            android:text="@string/lt001"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:textColor="@color/black"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/lt002"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center|start"
            android:layout_marginBottom="@dimen/dp15"
            android:background="@drawable/h1501_bg_btn_lost_window_focused"
            android:text="@string/lt002"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:textColor="@color/black"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/lt003"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center|start"
            android:layout_marginBottom="@dimen/dp15"
            android:background="@drawable/h1501_bg_btn_lost_window_focused"
            android:text="@string/lt003"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:textColor="@color/black"
            android:textSize="20sp" />

    </LinearLayout>


</ScrollView>
