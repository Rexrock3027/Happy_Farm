<?xml version="1.0" encoding="utf-8"?>

<shape xmlns:android="http://schemas.android.com/apk/res/android"
    android:shape="rectangle"><!-- android:shape指定形狀類型，默認為rectangle -->
    <!-- solid指定形狀的填充色，只有android:color一個屬性 -->
    <solid android:color="#FFBB86FC" />
    <!-- padding設置內容區域離邊界的間距 -->
    <padding
        android:bottom="5dp"
        android:left="5dp"
        android:right="5dp"
        android:top="5dp" />
    <!-- corners設置圓角，只適用於rectangle -->
    <corners android:radius="10dp" />
</shape>